pipeline {
    agent any

    environment {
        // üß† --- Configuration variables ---
        SERVER_IP      = '172.31.7.249'            // your EC2 server
        SSH_CREDENTIAL = 'node-app-key'            // Jenkins SSH key ID
        REPO_URL       = 'https://github.com/RajAhire-1/node-app-devops.git'
        BRANCH         = 'main'
        REMOTE_USER    = 'ubuntu'
        REMOTE_PATH    = '/home/ubuntu/node-app'

        // optional customizations
        NODE_ENV       = 'production'
        APP_NAME       = 'cinelite-app'
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üì¶ Cloning repository...'
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Install Dependencies (Local Test)') {
            steps {
                echo 'üì¶ Installing Node dependencies (for lint/test)...'
                sh 'npm install'
            }
        }

        stage('Run Lint / Build Checks') {
            steps {
                echo 'üß™ Running code checks...'
                // (optional) Add real commands if you have ESLint / tests
                sh 'echo "No tests defined. Skipping..."'
            }
        }

        stage('Deploy to EC2') {
            steps {
                echo "üöÄ Uploading and deploying app to ${SERVER_IP}"
                sshagent([SSH_CREDENTIAL]) {
                    sh """
                        # create remote directory
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} 'mkdir -p ${REMOTE_PATH}'

                        # copy project files
                        scp -o StrictHostKeyChecking=no -r * ${REMOTE_USER}@${SERVER_IP}:${REMOTE_PATH}/

                        # install dependencies & restart app
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            cd ${REMOTE_PATH} &&
                            npm install --omit=dev &&
                            pm2 start start.js --name ${APP_NAME} || pm2 restart ${APP_NAME}
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Application deployed successfully to EC2!'
        }
        failure {
            echo '‚ùå Deployment failed. Check Jenkins logs.'
        }
        always {
            echo 'üìú Pipeline completed.'
        }
    }
}
